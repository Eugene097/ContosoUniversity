@model ContosoUniversity.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Информация</h1>

<div>
    <h4>Курс</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название курса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Кредиты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CourseID">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
