@model ContosoUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>

<h4>Зачисление</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course" class="control-label">Курс</label>
                <select asp-for="Course" class="form-control" asp-items="ViewBag.CourseID">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Student" class="control-label">Фамилия студента</label>
                <select asp-for="Student" class="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label">Оценка</label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к спису</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
