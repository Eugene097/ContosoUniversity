@model ContosoUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1>Информация</h1>

<div>
    <h4>Зачисление</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Оценка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class = "col-sm-2">
            Курс
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class = "col-sm-2">
            Студент
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstMidName)
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EnrollmentID">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
